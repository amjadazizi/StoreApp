<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/view_dist_sides_20">

        <TextView
            android:id="@+id/txtHvadHedderDu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_whats_your_name"
            style="@style/RegistrationFragHeader"
            />

        <TextView
            android:id="@+id/txtDescrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/view_dist_sides_20"
            android:layout_marginRight="@dimen/view_dist_sides_20"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_when_you_enter"
            style="@style/RegistrationExplainText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/white"
        android:gravity="center_horizontal|center"
        android:layout_marginLeft="@dimen/view_dist_sides_15"
        android:layout_marginRight="@dimen/view_dist_sides_15"
        android:orientation="vertical"
        >

        <com.storeapp.ui.FloatingEditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:singleLine="true"
            style="@style/EditTextStyle"
        />

        <com.storeapp.ui.FloatingEditText
            android:id="@+id/txtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_dist_sides_20"
            android:ems="10"
            android:hint="Last Name"
            android:singleLine="true"
            style="@style/EditTextStyle"
        />

    </LinearLayout>


</LinearLayout>