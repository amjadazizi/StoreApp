<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="left"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
 >



            <TextView
                android:id="@+id/dialog_custom_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:textColor="@color/red"
                tools:text="Content"
                android:layout_weight="8"
                android:textSize="16sp"
                android:visibility="visible"
                tools:visibility="visible"/>


            <ProgressBar
                android:layout_alignParentRight="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/checkEmailExistsProgressBar"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginRight="5dp"/>



        </LinearLayout>

    <com.storeapp.ui.FloatingEditText
        android:id="@+id/newUserEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/text_email"
        android:layout_weight="1"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        />

        <LinearLayout
            android:id="@+id/dialog_custom_alongside_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingBottom="5dp"
          >

            <Button
                android:id="@+id/btnCasgDiaCancel"
                android:layout_width="88dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:padding="8dp"
                android:textAllCaps="true"
                tools:text="Cancel"
                android:background="@drawable/button_selector"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnCashDiaAccept"
                android:layout_width="88dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:padding="8dp"
                android:textAllCaps="true"
                tools:text="Add"
                android:background="@drawable/button_selector"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

