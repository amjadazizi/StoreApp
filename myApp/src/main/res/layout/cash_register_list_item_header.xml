<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cash_register_item_row"
    android:background="@color/peter_river"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:text="@string/text_amount"
        android:layout_marginLeft="@dimen/view_dist_sides_5"
        android:textColor="@color/black"
        android:textSize="@dimen/text_cash_register_item_row"
        >
    </TextView>

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="3.5"
        android:layout_height="match_parent"
        android:text="@string/text_description"
        android:textColor="@color/black"
        android:textSize="@dimen/text_cash_register_item_row"
       >
    </TextView>

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:text="Price"
        android:layout_marginRight="@dimen/view_dist_sides_5"
        android:textColor="@color/black"
        android:textSize="@dimen/text_cash_register_item_row"
       >

    </TextView>

</LinearLayout>