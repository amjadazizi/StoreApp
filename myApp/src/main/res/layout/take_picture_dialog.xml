<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        >

        <LinearLayout
        android:id="@+id/addEmployeeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:background="@color/clouds">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:gravity="center_vertical"
                    android:id="@+id/txtTakePicture"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_list_item_height"
                    android:paddingLeft="@dimen/view_dist_sides_10"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/black"
                    tools:text="Take Picture"
                    android:textSize="@dimen/text_dialog_list_item"
    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/txtChooseFromGallery"
                    android:paddingLeft="@dimen/view_dist_sides_10"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_list_item_height"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/black"
                    tools:text="Choose from Gallery"
                    android:textSize="@dimen/text_dialog_list_item"
                    />

            </LinearLayout>


            <LinearLayout
            android:id="@+id/dialog_custom_alongside_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/view_dist_sides_15"
            android:layout_marginRight="@dimen/view_dist_sides_15"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingBottom="@dimen/view_dist_sides_15"
            android:paddingTop="@dimen/view_dist_sides_10">


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/dialog_button_widt"
                android:layout_height="@dimen/dialog_button_height"
                android:gravity="center"
                android:padding="8dp"
                android:textAllCaps="true"
                tools:text="Cancel"
                android:background="@drawable/button_selector"
                android:textSize="@dimen/text_dialog_button"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                tools:visibility="visible"/>

        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
