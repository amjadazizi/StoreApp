<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/peter_river"
        >

        <ImageButton
            android:id="@+id/btnbackArrowEmpList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/ic_arrow_left"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/view_dist_sides_10"
            />


        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empSearchView"
            android:layout_gravity="center_vertical"
            android:layout_alignBottom="@+id/drawer_indicator"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

       <ListView
           android:id="@+id/employeeList"
           android:layout_width="match_parent"
           android:dividerHeight="30dp"
           android:layout_height="wrap_content"
           android:layout_marginRight="@dimen/view_dist_sides_10"
           android:layout_marginLeft="@dimen/view_dist_sides_10"
           android:layout_marginTop="@dimen/view_dist_sides_5">
           </ListView>
</LinearLayout>

