<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/peter_river"
        >

        <ImageButton
            android:id="@+id/btnbackArrowEmpList"
            android:layout_width="@dimen/action_bar_img_button_width"
            android:layout_height="@dimen/action_bar_img_button_height"
            android:scaleType="centerInside"
            android:background="@drawable/ic_arrow_left"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/view_dist_sides_10"
            />

    </RelativeLayout>

       <ListView
           android:id="@+id/employeeList"
           android:layout_width="match_parent"
           android:dividerHeight="@dimen/divider_height_emp_list"
           android:layout_height="wrap_content"
           android:layout_marginRight="@dimen/view_dist_sides_15"
           android:layout_marginLeft="@dimen/view_dist_sides_10"
           android:layout_marginTop="@dimen/view_dist_sides_10">
           </ListView>
</LinearLayout>

