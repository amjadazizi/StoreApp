<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/clouds">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/bckColor"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_call_32"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            />


        <Button
            android:id="@+id/btn_edit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@android:drawable/ic_menu_call"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <FrameLayout

        android:id="@+id/lll"
        android:layout_below="@id/topBar"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="@color/alizarin"
        android:orientation="vertical"

        >

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_cash_register"
                />

</FrameLayout>




    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnTakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/white"
        fab:fab_addButtonColorNormal="@color/alizarin"
        app:fab_icon="@android:drawable/ic_dialog_info"
        fab:fab_title="Infomation"
        fab:fab_colorPressed="@color/white_pressed"
        app:fab_size="normal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="203dp"
        android:padding="14dp"
        android:layout_marginBottom="15dp"
        />
    <RelativeLayout
        android:id="@+id/kaka"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/lll"
        android:layout_marginTop="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/itemButtons"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_marginLeft="17dp">


                <TextView
                    android:id="@+id/txtProPersonName"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="My Profile"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/peter_river" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/itemButtons"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgviewEmail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/ic_menu_call"
                        />


                    <com.storeapp.Activities.ExternalClasses.FloatingEditText
                       android:id="@+id/editProEmail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="5"
                        android:editable="false"
                        android:hint="Email"
                        style="@style/EditTextAppTheme"
                        android:paddingLeft="10dp"
                        />





        </LinearLayout>
        <LinearLayout
            android:id="@+id/itemButtons"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1">






            <ImageView
                android:id="@+id/imgviewPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@drawable/ic_action"
                />


            <com.storeapp.Activities.ExternalClasses.FloatingEditText
                android:id="@+id/editProPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:hint="Phone"
                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                style="@style/EditTextAppTheme"
                />





        </LinearLayout>
        <LinearLayout
            android:id="@+id/itemButtons"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_marginLeft="17dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/peter_river" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/itemButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1">






            <ImageView
                android:id="@+id/imgviewPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@android:drawable/ic_menu_call"
                />


            <com.storeapp.Activities.ExternalClasses.FloatingEditText
                android:id="@+id/editProCurrentPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:hint="New Password"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                style="@style/EditTextAppTheme"
                />





        </LinearLayout>
        <LinearLayout
            android:id="@+id/itemButtons"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/imgviewRepPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@android:drawable/ic_menu_call"
                />




            <ImageView
                android:id="@+id/imgviewNewPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"

                android:background="@android:drawable/ic_menu_call"
                />


            <com.storeapp.Activities.ExternalClasses.FloatingEditText
                android:id="@+id/editProRepeatPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:hint="New Password"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                style="@style/EditTextAppTheme"
                />
      <!--      <com.storeapp.Activities.ExternalClasses.FloatingEditText

                android:id="@+id/editProRepeatPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:hint="Repeat Password"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2.3"
                style="@style/EditTextAppTheme"
                />-->




        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>

    </RelativeLayout>


