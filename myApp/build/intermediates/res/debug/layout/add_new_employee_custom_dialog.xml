<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="left"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
 >
            <TextView
                android:id="@+id/dialog_custom_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/edit_layout_store_items_height"
                android:paddingTop="@dimen/view_dist_sides_15"
                android:textColor="@color/red"
                tools:text="Content"
                android:layout_weight="3"
                android:textSize="17sp"
                android:visibility="visible"
                tools:visibility="visible"/>


            <ProgressBar
                android:layout_alignParentRight="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/checkEmailExistsProgressBar"
                android:layout_weight="0.5"
                android:gravity="end"
                android:layout_marginRight="@dimen/view_dist_sides_5"/>



        </LinearLayout>

    <com.storeapp.ui.FloatingEditText
        android:id="@+id/newUserEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/view_dist_sides_10"
        android:layout_marginRight="@dimen/view_dist_sides_10"
        android:hint="@string/text_email"
        android:layout_weight="1"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        style="@style/EditTextStyle"
        />

        <LinearLayout
            android:id="@+id/dialog_custom_alongside_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/view_dist_sides_15"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingBottom="@dimen/view_dist_sides_5"
          >

            <Button
                android:id="@+id/btnCasgDiaCancel"
                android:layout_width="@dimen/dialog_button_widt"
                android:layout_height="@dimen/dialog_button_height"
                android:gravity="center"
                android:padding="@dimen/view_dist_sides_10"
                android:textAllCaps="true"
                tools:text="@string/text_cancel"
                android:background="@drawable/button_selector"
                android:textSize="@dimen/text_size_dialog_button"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnCashDiaAccept"
                android:layout_width="@dimen/dialog_button_widt"
                android:layout_height="@dimen/dialog_button_height"
                android:gravity="center"
                android:padding="@dimen/view_dist_sides_10"
                android:textAllCaps="true"
                tools:text="@string/text_add_employe"
                android:background="@drawable/button_selector"
                android:textSize="@dimen/text_size_dialog_button"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

