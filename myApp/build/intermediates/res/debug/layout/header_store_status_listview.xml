<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_linear_layout"
    android:layout_height="@dimen/header_store_status_height"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/view_dist_sides_10"
        android:layout_marginLeft="@dimen/view_dist_sides_20"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtShopName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/text_store_status_drawer"
            android:textColor="@color/black"
            android:gravity="center_vertical"

            />


        <TextView
            android:id="@+id/txtShopCvrNumber"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/view_dist_sides_5"
            android:textSize="@dimen/text_store_status_drawer"
            android:textColor="@color/black"
            android:gravity="center_vertical"

            />

        <TextView
            android:id="@+id/txtShopPhonenumber"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_store_status_drawer"
            android:textColor="@color/black"
            android:gravity="center_vertical"
           />

        <TextView
            android:id="@+id/txtShopEmalAdd"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/view_dist_sides_5"
            android:layout_weight="1"
            android:textSize="@dimen/text_store_status_drawer"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/peter_river"/>

</LinearLayout>
