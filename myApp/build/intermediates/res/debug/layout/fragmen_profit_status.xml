<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peter_river"
    android:orientation="vertical" >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.8"
       android:orientation="vertical"
       >

       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_gravity="center"
           android:text="Sale Of Today"
           android:textColor="@color/white"
           android:textSize="22sp"
           android:layout_weight="0.5"
           android:layout_marginTop="15dp"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="0.5">
           <TextView
               android:id="@+id/txtpsCash"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cash:"
               android:textColor="@color/white"
               android:layout_marginLeft="20dp"
               android:textSize="20sp"
               android:layout_alignParentLeft="true"/>

           <TextView
               android:id="@+id/txtCashAmount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"
               android:textColor="@color/white"
               android:layout_marginRight="40dp"
               android:textSize="20sp"
               android:layout_alignParentRight="true"/>
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="0.5">
           <TextView
               android:id="@+id/txtpsCreditcard"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Credit Cash:"
               android:textColor="@color/white"
               android:layout_marginLeft="20dp"
               android:textSize="20sp"
               android:layout_alignParentLeft="true"/>

           <TextView
               android:id="@+id/txtCreditCardAmount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"
               android:textColor="@color/white"
               android:layout_marginRight="40dp"
               android:textSize="20dp"
               android:layout_alignParentRight="true"/>
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="0.5">
           <TextView
               android:id="@+id/txtpsTotal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Total Sale:"
               android:textColor="@color/white"
               android:layout_marginLeft="20dp"
               android:textSize="20sp"
               android:layout_alignParentLeft="true"/>

           <TextView
               android:id="@+id/txttotalSaleAmount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"
               android:textColor="@color/white"
               android:layout_marginRight="40dp"
               android:textSize="20sp"
               android:layout_alignParentRight="true"/>
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="0.5">

           <TextView
               android:id="@+id/txtDateOfTheday"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Date"
               android:textColor="@color/white"
               android:layout_marginRight="40dp"
               android:textSize="10sp"
               android:layout_alignParentRight="true"/>
       </RelativeLayout>

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.2"
        android:background="@color/white">

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:dividerHeight="30dp"
            android:background="@color/white">
        </ListView>

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Amjad/Documents/GitHub/StoreApp/myApp/src/main/res/layout/fragmen_profit_status.xml -->