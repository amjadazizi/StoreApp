            <LinearLayout
                android:id="@+id/itemButtons"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_marginTop="-5dp">


                <ImageView
                    android:id="@+id/imgviewNewPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_call" />


                <com.storeapp.Activities.ExternalClasses.FloatingEditText
                    android:id="@+id/editProNewPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:hint="New Password"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="5"
                    style="@style/EditTextAppTheme" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemButtons"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_marginTop="-5dp">


                <ImageView
                    android:id="@+id/imgviewRepPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_call" />


                <com.storeapp.Activities.ExternalClasses.FloatingEditText

                    android:id="@+id/editProRepeatPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:hint="Repeat Password"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="5"
                    style="@style/EditTextAppTheme" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>


