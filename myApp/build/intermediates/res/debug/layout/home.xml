<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_row="2">

    <TableRow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/ctCashRegBtn"
                android:layout_width="@dimen/home_item_height_width"
                android:layout_height="@dimen/home_item_height_width"
                android:background="@drawable/dashboard_cash_register_btn_pressed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/title_activity_cash_register"
                style="@style/DashboardButton"/>

        </LinearLayout>


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
          >

            <ImageButton
                android:id="@+id/ctStoreItemBtn"
                android:layout_width="@dimen/home_item_height_width"
                android:layout_height="@dimen/home_item_height_width"
                android:background="@drawable/dashboard_store_item_btn_pressed"
              />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/title_activity_store_items"
                style="@style/DashboardButton"/>

        </LinearLayout>


    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal">


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/ctStoreStatus"
                android:layout_width="@dimen/home_item_height_width"
                android:layout_height="@dimen/home_item_height_width"
                android:background="@drawable/dashborad_store_status_btn_pressed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_dist_sides_10"
                android:textColor="@color/black"
                android:text="@string/title_activity_store__status"
                style="@style/DashboardButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ctEmplList"
                android:layout_width="@dimen/home_item_height_width"
                android:layout_height="@dimen/home_item_height_width"
                android:background="@drawable/dashborad_employee_btn_pressed"
           />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/title_activity_employee_list"
                style="@style/DashboardButton"/>

        </LinearLayout>

    </TableRow>


</TableLayout>


