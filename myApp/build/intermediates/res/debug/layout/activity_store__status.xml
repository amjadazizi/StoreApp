<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Action-bar looking view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/peter_river"
        >

        <ImageView
            android:id="@+id/drawer_indicator"
            android:layout_width="@dimen/action_bar_img_button_width"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@drawable/selector_back_arrow_employee_list"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"

            />

        <TextView
            android:id="@+id/txtTitleStoreStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title"
            android:layout_marginLeft="@dimen/view_dist_sides_15"
            android:layout_marginRight="65dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_action_bar"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_toRightOf="@id/drawer_indicator"/>


    </RelativeLayout>


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        >


        <FrameLayout
            android:id="@+id/mainContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white" >
        </FrameLayout>



        <ListView
            android:id="@+id/drawerList"
            android:layout_width="@dimen/store_status_listview_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/white"
            android:choiceMode="singleChoice"
            android:divider="@color/transparent"
            >


        </ListView>


    </android.support.v4.widget.DrawerLayout>

</LinearLayout>









