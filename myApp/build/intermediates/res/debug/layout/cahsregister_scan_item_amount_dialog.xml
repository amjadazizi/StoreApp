<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="left"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/view_dist_sides_25"
            android:layout_marginBottom="@dimen/view_dist_sides_25">

            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="@dimen/blue_button_height"
                android:layout_height="@dimen/blue_button_height"
                android:src="@drawable/ic_minus_white"
                android:layout_marginLeft="@dimen/view_dist_sides_20"
                android:gravity="center"
                android:background="@drawable/round_button_shape"
                />

            <com.storeapp.ui.FloatingEditText
                android:id="@+id/editCashDiaAmount"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                style="@style/EditTextStyle"
                android:layout_marginLeft="@dimen/view_dist_sides_10"
                android:layout_marginRight="@dimen/view_dist_sides_10"
                android:paddingTop="@dimen/view_dist_sides_5"
                android:text="1"
                android:ellipsize="start"
                android:gravity="center"
                android:layout_weight="5"
                android:inputType="number"
                android:textColor="@color/black"
                />

            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="@dimen/blue_button_height"
                android:layout_height="@dimen/blue_button_height"
                android:src="@drawable/ic_plus_white"
                android:layout_marginRight="@dimen/view_dist_sides_20"
                android:background="@drawable/round_button_shape"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dialog_custom_alongside_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/view_dist_sides_15"
            android:layout_marginRight="@dimen/view_dist_sides_15"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingBottom="@dimen/view_dist_sides_15"
            android:paddingTop="@dimen/view_dist_sides_10">

            <Button
                android:id="@+id/btnScanCancel"
                android:layout_height="@dimen/dialog_button_height"
                android:layout_width="@dimen/dialog_button_widt"
                android:gravity="center"
                android:padding="@dimen/view_dist_sides_10"
                android:textAllCaps="true"
                tools:text="Cancel"
                android:background="@drawable/button_selector"
                android:textSize="@dimen/text_dialog_button"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnScanItem"
                android:layout_width="@dimen/dialog_button_widt"
                android:layout_height="@dimen/dialog_button_height"
                android:gravity="center"
                android:padding="@dimen/view_dist_sides_10"
                android:textAllCaps="true"
                tools:text="Accept"
                android:background="@drawable/button_selector"
                android:textSize="@dimen/text_dialog_button"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

